<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="inputCookbookViewModel"
            type="de.fherfurt.onlyoneegg.view.ui.inputCookbook.InputCookbookViewModel" />
    </data>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="50dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cookbookNameTextView"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/cookbookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|text|textEmailAddress"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageCookbook"
            android:layout_width="match_parent"
            android:layout_height="369dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_image_24_yellow_light" />


        <Button
            android:id="@+id/add_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/yellow"
            android:text="@string/addPictureCookbook"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/doneAddCookbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/yellow"
            android:text="@string/doneAddCookbook"
            android:textColor="@color/black" />


    </LinearLayout>
</layout>
