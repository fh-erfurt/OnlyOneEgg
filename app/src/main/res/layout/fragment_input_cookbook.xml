<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="inputCookbookViewModel"
            type="de.fherfurt.onlyoneegg.view.ui.inputCookbook.InputCookbookViewModel" />
    </data>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cookbookNameTextView"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/cookbookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|text|textEmailAddress"
            android:textAlignment="center" />

        <Button
            android:id="@+id/add_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/addPictureCookbook" />

        <Button
            android:id="@+id/doneAddCookbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/doneAddCookbook" />


    </LinearLayout>
</layout>
